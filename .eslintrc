{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "destructuring": true,
            "spread": true,
            "experimentalObjectRestSpread": true
        }
    },
    "presets": [
        "next/babel"
    ],
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        //additional rules here
        "react-hooks/rules-of-hooks": "error"
    }
}